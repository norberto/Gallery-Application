<?page title="Gallery Application - Browse"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<?init class="org.zkoss.zk.ui.util.Composition" arg0="zk/layout/template.zul"?>
<zk xmlns:n="native" xmlns:x="xhtml" xmlns:z="http://www.zkoss.org/2005/zul">
    <div self="@define(content)" align="center" viewModel="@id('vm') @init('edu.norbertzardin.vm.BrowseVM')">
        <n:div class="container-fluid">
            <n:div class="row">
                <n:div class="col-md-3 col-md-push-9">
                    <n:div id="buttons">
                        <n:button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addCatalogueModal">Create Catalogue</n:button>
                    </n:div>
                </n:div>
            </n:div>

            <n:div class="row">
                <n:div class="col-md-12">
                    <n:div id="catalogue-container" class="container-fluid top-buffer" width="auto" style="margin-left:50px">
                        <n:div class="row">
                            <div id="load1" children="@load(vm.catalogueList)">
                                <template name="children" var="cat">
                                    <div class="col-md-2">

                                        <div class="container">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <image width="200px" height="200px" src="images/catalogue-icon.png" onClick="@command('selectCatalogue',selectedCatalogue=cat)"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <label value="@load(cat.title)" style="margin-right:10px" onClick="@command('selectCatalogue',selectedCatalogue=cat)"/>
                                                    <x:button type="button" class="btn btn-primary glyphicon glyphicon-edit"
                                                              data-toggle="modal" data-target="#editCatalogue"
                                                              onClick="@command('selectCatalogue',selectedCatalogue=cat)"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </template>
                            </div>
                        </n:div>
                    </n:div>
                </n:div>
            </n:div>

            <!--<n:div class="row">-->
                <!--<n:div class="col-md-12">-->
                    <!--<n:div id="image-container" class="container-fluid top-buffer" width="auto" style="margin-left:50px">-->
                        <!--<n:div class="row">-->
                            <!--<div id="load1" children="@load(vm.imageList)">-->
